@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;
<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Details)
    @Html.TextBoxFor(model => model.Details)
    <br>
    @Html.LabelFor(model => model.Client)
    @Html.DropDownList("ClientId")
    <br>
    <input type="submit" value="Add new Stylist" />
}

<p>@Html.ActionLink("Show all Stylist", "Index")</p>